@{
    ViewData["Title"] = "413 Grade Calculator";
}

@model gradeCalcModel;

<!--Where user enters grade info-->
<br />
<h3>Grade Calculator:</h3>
<form method="post">
    <label>Assignments:</label>
    <input id="assignmentGrade" type="number" asp-for="assignments" />
    <br /><br />

    <label>Group Projects:</label>
    <input id="groupGrade" type="number" asp-for="projects" />
    <br /><br />

    <label>Quizzes:</label>
    <input id="quizGrade" type="number" asp-for="quizzes" />
    <br /><br />

    <label>Midterm Exam:</label>
    <input id="midtermGrade" type="number" asp-for="midterm" />
    <br /><br />

    <label>Final Exam:</label>
    <input id="finalGrade" type="number" asp-for="final" />
    <br /><br />

    <label>Intex:</label>
    <input id="intexGrade" type="number" asp-for="intex" />
    <br /><br />

    <input id="submitGrades" type="submit" value="Submit" />
    <br /><br />

    <!--Where final grade will be printed-->
    <p>Final Grade:</p>
    <p id="printIt"></p>

    <!--Helps display errors to user-->
    <div asp-validation-summary="All"></div>
</form>

<script src="js/gradecalculation.js"></script>
